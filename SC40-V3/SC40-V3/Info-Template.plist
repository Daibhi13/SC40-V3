<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Add these entries to your existing Info.plist -->
	
	<!-- URL Schemes for Social Login -->
	<key>CFBundleURLTypes</key>
	<array>
		<!-- Facebook URL Scheme -->
		<dict>
			<key>CFBundleURLName</key>
			<string>com.accelerate.SC40-V3.facebook</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>fb[YOUR_FACEBOOK_APP_ID]</string>
			</array>
		</dict>
		<!-- Google Sign-In URL Scheme -->
		<dict>
			<key>CFBundleURLName</key>
			<string>com.accelerate.SC40-V3.google</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>[YOUR_REVERSED_CLIENT_ID]</string>
			</array>
		</dict>
		<!-- Instagram OAuth URL Scheme -->
		<dict>
			<key>CFBundleURLName</key>
			<string>com.accelerate.SC40-V3.instagram</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>sc40instagram</string>
			</array>
		</dict>
	</array>

	<!-- Facebook Configuration -->
	<key>FacebookAppID</key>
	<string>[YOUR_FACEBOOK_APP_ID]</string>
	<key>FacebookClientToken</key>
	<string>[YOUR_FACEBOOK_CLIENT_TOKEN]</string>
	<key>FacebookDisplayName</key>
	<string>Sprint Coach 40</string>

	<!-- LSApplicationQueriesSchemes for Social Apps -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>fbapi</string>
		<string>fb-messenger-share-api</string>
		<string>fbauth2</string>
		<string>fbshareextension</string>
		<string>googlegmail</string>
		<string>googlemail</string>
		<string>instagram</string>
	</array>

	<!-- Privacy Usage Descriptions -->
	<key>NSCameraUsageDescription</key>
	<string>Sprint Coach 40 uses the camera for profile photos and workout analysis.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Sprint Coach 40 accesses your photo library to set profile photos.</string>
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Sprint Coach 40 uses location services for GPS-based sprint timing and performance tracking.</string>

	<!-- Sign in with Apple Configuration -->
	<key>com.apple.developer.applesignin</key>
	<array>
		<string>Default</string>
	</array>
</dict>
</plist>
